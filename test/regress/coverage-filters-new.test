; Coverage tests for filters.cc and filters.h
; Tests: various report filter options

2024/01/01 Grocery Store
    Expenses:Food                    $50.00
    Assets:Cash

2024/01/15 Gas Station
    Expenses:Gas                     $30.00
    Assets:Cash

2024/02/01 Restaurant
    Expenses:Dining                  $45.00
    Assets:Cash

2024/02/15 Office Supply
    Expenses:Office                  $100.00
    Assets:Cash

; Test --daily reporting
test reg --daily Expenses -b 2024/01/01 -e 2024/01/16
24-Jan-01 - 24-Jan-01           Expenses:Food                $50.00       $50.00
24-Jan-15 - 24-Jan-15           Expenses:Gas                 $30.00       $80.00
end test

; Test --monthly reporting
test reg --monthly Expenses
24-Jan-01 - 24-Jan-31           Expenses:Food                $50.00       $50.00
                                Expenses:Gas                 $30.00       $80.00
24-Feb-01 - 24-Feb-29           Expenses:Dining              $45.00      $125.00
                                Expenses:Office             $100.00      $225.00
end test

; Test --related to see opposite postings
test reg --related Expenses:Food
24-Jan-01 Grocery Store         Assets:Cash                 $-50.00      $-50.00
end test

; Test --invert
test reg --invert Expenses:Food
24-Jan-01 Grocery Store         Expenses:Food               $-50.00      $-50.00
end test

; Test --sort
test reg Expenses --sort account
24-Feb-01 Restaurant            Expenses:Dining              $45.00       $45.00
24-Jan-01 Grocery Store         Expenses:Food                $50.00       $95.00
24-Jan-15 Gas Station           Expenses:Gas                 $30.00      $125.00
24-Feb-15 Office Supply         Expenses:Office             $100.00      $225.00
end test
