= ^Expenses and expr "any(account =~ /^A:Assets/ and R)"
    [A:Assets:Split]              (amount / 2)
    [B:Assets:Split]              (-amount / 2)

= ^Expenses and expr "any(account =~ /^B:Assets/ and R)"
    [B:Assets:Split]              (amount / 2)
    [A:Assets:Split]              (-amount / 2)

